<div class="auth-page">
  <div class="auth-overlay"></div>

  <div class="auth-card">
    <div class="auth-header text-center mb-4">
      <div class="auth-icon mb-3">
        <span>ðŸŽ¬</span>
      </div>
      <h1 class="h3 mb-1">Welcome </h1>
      <p class="text-muted mb-0">Sign in to continue exploring movies.</p>
    </div>

    <form id="loginForm" class="auth-form">
      <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input type="email"
               class="form-control auth-input"
               id="email"
               placeholder="you@example.com"
               required>
      </div>

      <div class="mb-3">
        <label class="form-label d-flex justify-content-between align-items-center" for="password">
          <span>Password</span>
          
        </label>
        <input type="password"
               class="form-control auth-input"
               id="password"
               placeholder="Enter your password"
               required>
      </div>

      <button type="submit"
              class="btn btn-warning w-100 auth-submit-btn mb-2">
        Login
      </button>

      <p class="text-danger small mt-1" id="loginError" style="display:none;"></p>

      <div class="auth-footer text-center mt-3">
        <span class="text-muted">New here?</span>
        <a href="/auth/register" class="auth-link ms-1">Create an account</a>
      </div>
    </form>
  </div>
</div>

<script>
(function () {
  const form = document.getElementById('loginForm');
  const errorEl = document.getElementById('loginError');

  function showError(msg) {
    errorEl.textContent = msg;
    errorEl.style.display = 'block';
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    errorEl.style.display = 'none';

    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value.trim();

    try {
      const res = await fetch('/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, password })
      });
      const data = await res.json().catch(() => ({}));

      if (!res.ok) {
        showError(data.error || 'Unable to login. Please check your credentials.');
        return;
      }

      localStorage.setItem('jwt', data.token);

      const params = new URLSearchParams(window.location.search);
      const redirect = params.get('redirect') || '/movies';
      window.location.href = redirect;
    } catch (err) {
      showError('Network error while logging in. Please try again.');
    }
  });
})();
</script>
